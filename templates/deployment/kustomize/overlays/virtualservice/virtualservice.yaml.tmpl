apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  name: {{.Service.Name.DNSCase}}
  namespace: {{.Namespace}}
spec:
  hosts:
    - "{{.Parameters.Parameters.LoadBalancerHost}}"
  gateways:
    - istio-system/gateway
  http:
    - match:
        - uri:
            prefix: "/"
      route:
        - destination:
            host: {{.Service.Name.DNSCase}}
            port:
              number: 8080
